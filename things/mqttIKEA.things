//Stikala
Thing mqtt:topic:mosquitto:stikaloLuciOtok "Stikalo luči otok" (mqtt:broker:mosquitto) @ "Kuhinja" {
    Channels:
        Type string : action            "akcija"        [ stateTopic = "zigbee2mqtt/otokStikalo/action" ]   //toggle;brightness_down_click;brightness_up_click;arrow_left_click;arrow_right_click;toggle_hold
        Type number : battery           "baterija"      [ stateTopic = "zigbee2mqtt/otokStikalo/battery" ]
        Type number : linkquality       "povezava"      [ stateTopic = "zigbee2mqtt/otokStikalo/linkquality" ]
        Type switch : availability      "availability"  [ stateTopic = "zigbee2mqtt/otokStikalo/availability", on="online", off="offline" ]
}